#!/bin/sh

folders_to_backup=("/home/sbozzolo/documents" "/home/sbozzolo/documents/orgs")

for f in "$folders_to_backup"
do
    cd "$f"
    git add * > /dev/null 2>&1
    git commit -m "$(date +'%Y-%m-%d %H:%M')" > /dev/null 2>&1
    git push origin master > /dev/null 2>&1
    if [ ! $? -eq 0 ]
    then
        logger -p 2 "Error in the backup process!"
    fi
done
