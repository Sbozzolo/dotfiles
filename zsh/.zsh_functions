# ZSH functions

# Create archive

function ctar () {
     tar cvzf $1.tar.gz $1
}

# Create folder and enter that folder

function mkcd () {
  mkdir -p "$1"
  cd "$1"
}


# Move to trash instead of deleting

function rm () {
    if [[ ! "$PWD" = "$HOME"/.trash ]]
    then
        local path
        for path in "$@"; do
            # ignore any arguments
            if [[ "$path" = -* ]]; then :
            else
                local dst=${path##*/}
                # append the time if necessary
                while [ -e ~/.trash/"$dst" ]; do
                    dst="$dst "$(/bin/date +%H-%M-%S)
                done
                /bin/mv "$path" "$HOME"/.trash/"$dst"
            fi
        done
    else
        /bin/rm -i "$@"
    fi
}

function empty_trash () {
    local REPLY
    echo "Trash contains:"
    /bin/ls -a "$HOME"/.trash
    echo "Are you sure you want to empty trash (y/n)?"
    vared REPLY
    if [[ $REPLY =~ ^[Yy]$ ]]
    then
        /bin/rm -rf "$HOME"/.trash/*
        echo "Done!"
    fi
}

# Show all colors

function clicolors() {
    i=1
    for color in {000..255}; do;
        c=$c"$FG[$color]$colorâœ”$reset_color  ";
        if [ `expr $i % 8` -eq 0 ]; then
            c=$c"\n"
        fi
        i=`expr $i + 1`
    done;
    echo $c | sed 's/%//g' | sed 's/{//g' | sed 's/}//g' | sed '$s/..$//';
    c=''
}


# Search and play a song from youtube with mpv

function yta() {
    mpv --ytdl-format=bestaudio ytdl://ytsearch:"$*"
}

# Download an entire website with wget

function wget_all_website() {
    wget --recursive --no-clobber --page-requisites --html-extension --convert-links --no-parent "$1"
}

