# ZSH functions

# Create archive

function ctar () {
     tar cvzf $1.tar.gz $1
}

# Create folder and enter that folder

function mkcd () {
  mkdir -p "$1"
  cd "$1"
}


# Move to trash instead of deleting

function rm () {
    if [[ ! "$PWD" = "$HOME"/.trash ]]
    then
        local path
        for path in "$@"; do
            # ignore any arguments
            if [[ "$path" = -* ]]; then :
            else
                local dst=${path##*/}
                # append the time if necessary
                while [ -e ~/.trash/"$dst" ]; do
                    dst="$dst "$(date +%H-%M-%S)
                done
                /bin/mv "$path" "$HOME"/.trash/"$dst"
            fi
        done
    else
        /bin/rm -i "$@"
    fi
}

